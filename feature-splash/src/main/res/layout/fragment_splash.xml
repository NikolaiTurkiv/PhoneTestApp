<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_dark_blue"
    tools:context=".SplashFragment">

    <ImageView
        android:id="@+id/geoposition"
        android:layout_width="132dp"
        android:layout_height="132dp"
        android:src="@drawable/orange_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mark_pro_heavy"
        android:layout_marginStart="34dp"
        android:text="@string/splash_text"
        android:textColor="@color/main_white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/geoposition"
        app:layout_constraintStart_toStartOf="@+id/geoposition"
        app:layout_constraintTop_toTopOf="@+id/geoposition" />

</androidx.constraintlayout.widget.ConstraintLayout>