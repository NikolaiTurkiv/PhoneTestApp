<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_gray">

    <ImageView
        android:id="@+id/product_detail_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/dark_blue_rectangle"
        android:paddingStart="12dp"
        android:paddingTop="10dp"
        android:paddingEnd="12dp"
        android:paddingBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_back"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/product_detail_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/mark_pro"
        android:text="@string/product_details"
        android:textColor="@color/main_dark_blue"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/product_detail_back_button"
        app:layout_constraintStart_toEndOf="@+id/product_detail_back_button"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/product_detail_shopping_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:background="@drawable/orange_rectangle"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/product_detail_back_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/product_detail_back_button"
        app:srcCompat="@drawable/white_bag"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>